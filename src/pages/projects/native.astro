---
import { Image } from "astro:assets";
import androidPhone from "../../../public/img/maplibre-native-android.png";
import iosPhone from "../../../public/img/maplibre-native-ios.png";
import android from "../../assets/maplibre-native/android.png";
import ios from "../../assets/maplibre-native/ios.png";
import metal from "../../assets/maplibre-native/metal.png";
import opengl from "../../assets/maplibre-native/opengl.png";
import vulkan from "../../assets/maplibre-native/vulkan.png";
import TitleHeader from "../../components/TitleHeader.astro";
import Layout from "../../layouts/Layout.astro";
---

<style lang="scss">
  .key-benefits {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
    margin-top: 32px;

    .benefit {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 8px;
      padding: 8px 16px;
      font-size: 0.9rem;
    }
  }
  section {
    padding: 40px 20px;
    text-align: center;

    &:nth-child(even) {
      color: #4a5568;
      background: #f8fafc;
    }
    .header {
      background: rgb(17, 23, 37);
    }

    &:nth-child(odd) {
      color: white;
      background: #1a365d;
    }

    h1 {
      font-size: 2.5rem;
      margin-bottom: 16px;
    }

    h2 {
      font-size: 2rem;
      margin-bottom: 16px;
    }

    .tagline {
      font-size: 1.2rem;
      margin-bottom: 24px;
      opacity: 0.9;
    }

    p {
      font-size: 1.1rem;
      margin: 16px auto 32px;
      max-width: 600px;
    }
  }

  .grid {
    display: grid;
    gap: 24px;
    max-width: 1000px;
    margin: 0 auto;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));

    &.mobile-grid {
      max-width: 500px;
      grid-template-columns: repeat(2, 1fr);
    }

    &.graphics-grid {
      grid-template-columns: repeat(3, 1fr);
      max-width: 600px;
    }

    &.stats-grid {
      grid-template-columns: repeat(3, 1fr);
      max-width: 800px;
    }

    &.ecosystem-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      text-align: left;
    }
  }

  .card {
    background: white;
    border-radius: 12px;
    padding: 20px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);

    img {
      width: auto;
      margin-bottom: 12px;
    }

    h3 {
      color: #1a365d;
      font-size: 1.1rem;
      margin: 8px 0;
    }

    p {
      color: #64748b;
      font-size: 0.9rem;
      margin: 0;
    }
  }

  .phone-container {
    display: flex;
    flex-direction: column;
    align-items: center;

    img {
      height: 30rem;
      width: auto;
    }

    h3 {
      margin-top: 16px;
      color: #ffffff;
    }
  }

  .stat-card {
    background: #667eea;
    border-radius: 12px;
    padding: 24px;
    color: white;
    text-align: center;

    .stat-number {
      font-size: 2.5rem;
      font-weight: bold;
      display: block;
      margin-bottom: 8px;
    }

    .stat-label {
      font-size: 1rem;
      opacity: 0.9;
    }
  }

  .ecosystem-item {
    border-left: 3px solid #667eea;

    h4 {
      color: #1a365d;
      margin: 0 0 8px;
      font-size: 1rem;
    }

    p {
      font-size: 0.9rem;
      margin: 0;
    }
  }

  .learn-more-badges {
    text-align: center;

    .badge {
      margin: 4px;
    }
  }

  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2rem;
    }

    .grid {
      grid-template-columns: 1fr;

      &.mobile-grid {
        grid-template-columns: 1fr;
      }

      &.graphics-grid {
        grid-template-columns: 1fr;
      }

      &.stats-grid {
        grid-template-columns: 1fr;
      }
    }
  }
</style>

<Layout title="MapLibre Native">
